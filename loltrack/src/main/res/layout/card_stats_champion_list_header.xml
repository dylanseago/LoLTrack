<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <com.seago.loltrack.fonts.RobotoTextView
        android:id="@+id/standing"
        style="@style/CardStat"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/label_numberSign"
        android:textIsSelectable="false" />

    <com.seago.loltrack.fonts.RobotoLightTextView
        android:id="@+id/championName"
        style="@style/CardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/label_championLabel"
        android:textIsSelectable="false" />

    <com.seago.loltrack.fonts.RobotoTextView
        android:id="@+id/winPercent"
        style="@style/CardStat2"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/label_winPercent"
        android:textIsSelectable="false" />

    <com.seago.loltrack.fonts.RobotoTextView
        android:id="@+id/games"
        style="@style/CardStat2"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/label_gamesNoColon"
        android:textIsSelectable="false" />

</LinearLayout>