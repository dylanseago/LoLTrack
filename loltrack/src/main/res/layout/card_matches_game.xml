<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_content"
    style="@style/card_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGreen"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:background="@drawable/summoner_icon"
            android:contentDescription="@string/contentDescription_championIcon"
            android:maxHeight="68dp"
            android:maxWidth="68dp"
            android:scaleType="centerInside"
            android:src="@drawable/champion_icon_annie" />

        <RelativeLayout
            android:id="@+id/outcomeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon" >

            <com.seago.loltrack.fonts.RobotoLightTextView
                android:id="@+id/outcome"
                style="@style/CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Victory"
                android:textColor="@color/statGreen" />

            <com.seago.loltrack.fonts.RobotoLightTextView
                android:id="@+id/mode"
                style="@style/CardHeader3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outcome"
                android:layout_centerHorizontal="true"
                android:text="Normal 5v5" />

            <TextView
                android:id="@+id/timeSince"
                style="@style/CardStat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mode"
                android:layout_centerHorizontal="true"
                android:text="2 days ago" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/lengthLayout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <com.seago.loltrack.fonts.RobotoLightTextView
                    android:id="@+id/length"
                    style="@style/CardHeader4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="30:42" />

                <TextView
                    android:id="@+id/lengthLabel"
                    style="@style/CardStat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/length"
                    android:layout_centerHorizontal="true"
                    android:text="Length" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/itemLayout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="right" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_toLeftOf="@+id/item1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/spell1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:contentDescription="Summoner Spell 1"
                        android:scaleType="centerInside"
                        android:src="@drawable/flash" />

                    <ImageView
                        android:id="@+id/spell2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:contentDescription="Summoner Spell 2"
                        android:scaleType="centerInside"
                        android:src="@drawable/ignite" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@+id/item2"
                    android:adjustViewBounds="true"
                    android:contentDescription="Item 1"
                    android:maxHeight="16dp"
                    android:maxWidth="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/item_example" />

                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toLeftOf="@+id/item3"
                    android:adjustViewBounds="true"
                    android:contentDescription="Item 2"
                    android:maxHeight="16dp"
                    android:maxWidth="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/item_example" />

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Item 3"
                    android:maxHeight="16dp"
                    android:maxWidth="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/item_example" />

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/item5"
                    android:adjustViewBounds="true"
                    android:contentDescription="Item 4"
                    android:maxHeight="16dp"
                    android:maxWidth="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/item_example" />

                <ImageView
                    android:id="@+id/item5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item2"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/item6"
                    android:adjustViewBounds="true"
                    android:contentDescription="Item 5"
                    android:maxHeight="16dp"
                    android:maxWidth="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/item_example" />

                <ImageView
                    android:id="@+id/item6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/item3"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Item 6"
                    android:maxHeight="16dp"
                    android:maxWidth="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/item_example" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/kdaLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <com.seago.loltrack.fonts.RobotoLightTextView
                    android:id="@+id/kda"
                    style="@style/CardHeader4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="11/5/8" />

                <TextView
                    android:id="@+id/kdaLabel"
                    style="@style/CardStat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kda"
                    android:layout_centerHorizontal="true"
                    android:text="KDA" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/goldLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <com.seago.loltrack.fonts.RobotoLightTextView
                    android:id="@+id/gold"
                    style="@style/CardHeader4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="11.2k" />

                <TextView
                    android:id="@+id/goldLabel"
                    style="@style/CardStat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gold"
                    android:layout_centerHorizontal="true"
                    android:text="Gold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/minionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <com.seago.loltrack.fonts.RobotoLightTextView
                    android:id="@+id/minions"
                    style="@style/CardHeader4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="168" />

                <TextView
                    android:id="@+id/minionsLabel"
                    style="@style/CardStat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/minions"
                    android:layout_centerHorizontal="true"
                    android:text="Minions" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>