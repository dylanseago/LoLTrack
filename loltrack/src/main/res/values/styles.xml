<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CardText">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/DarkGrey</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardTitle">
        <item name="android:textSize">@dimen/card_xl_text</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="CardSubtitle" parent="@style/CardText">
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="CardHeader" parent="@style/CardText">
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">@color/DarkestGrey</item>
    </style>

    <style name="CardHeader2" parent="@style/CardHeader">
        <item name="android:textSize">@dimen/card_small_text</item>
    </style>

    <style name="CardHeader2.list">
        <item name="android:textColor">@color/Grey</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardHeader2.list.center">
        <item name="android:gravity">center</item>
    </style>

    <style name="CardHeader3" parent="@style/CardHeader">
        <item name="android:textSize">@dimen/card_xs_text</item>
    </style>

    <style name="CardHeader4" parent="@style/CardHeader">
        <item name="android:textSize">@dimen/card_xxs_text</item>
    </style>

    <style name="CardStat">
        <item name="android:textColor">@color/Grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardStat1" parent="CardStat">
        <item name="android:textSize">@dimen/card_xs_text</item>
    </style>

    <style name="CardStat1.list">
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CardStat1.list.center">
        <item name="android:gravity">center</item>
    </style>

    <style name="CardStat2" parent="CardStat">
        <item name="android:textSize">@dimen/card_xxs_text</item>
    </style>

    <style name="CardStat3" parent="CardStat">
        <item name="android:textSize">@dimen/card_xxxs_text</item>
    </style>
    
    <style name="CardStat4" parent="CardStat">
        <item name="android:textSize">@dimen/card_xxxxs_text</item>
    </style>

    <style name="CardRegion">
        <item name="android:textSize">@dimen/card_xs_text</item>
        <item name="android:textColor">@color/LightGrey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bannerSubtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="ComingSoonHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="ComingSoonEntry">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="LabelTiny">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="card_shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_shadow</item>
        <item name="android:src">@drawable/card_shadow</item>
        <item name="android:layout_below">@+id/card_content</item>
    </style>

    <style name="card_outer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/card_outer_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_outer_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_outer_padding_left</item>
        <item name="android:paddingRight">@dimen/card_outer_padding_right</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="card_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/card_selector</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="card_content.single_padding">
        <item name="android:paddingTop">@dimen/card_single_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/card_single_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/card_single_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_single_padding_horizontal</item>
    </style>

    <style name="card_content.double_padding">
        <item name="android:padding">@dimen/card_double_padding</item>
    </style>

    <style name="LeagueDivisionText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/DarkGrey</item>
        <item name="android:clickable">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="LeagueDivisionButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>


    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.







        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>