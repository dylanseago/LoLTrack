<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_content"
    style="@style/card_content.single_padding"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <com.seago.loltrack.fonts.RobotoTextView
        android:id="@+id/standing"
        style="@style/CardStat"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/header_numberSign"
        android:textIsSelectable="false" />

    <com.seago.loltrack.fonts.RobotoTextView
        android:id="@+id/standingChange"
        style="@style/CardStat"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="%"
        android:textIsSelectable="false" />

    <com.seago.loltrack.fonts.RobotoLightTextView
        android:id="@+id/summonerName"
        style="@style/CardStat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/header_summoner"
        android:textIsSelectable="false" />

    <com.seago.loltrack.fonts.RobotoTextView
        android:id="@+id/wins"
        style="@style/CardStat2"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/header_wins"
        android:textIsSelectable="false" />

    <com.seago.loltrack.fonts.RobotoTextView
        android:id="@+id/points"
        style="@style/CardStat2"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/header_points"
        android:textIsSelectable="false" />

</LinearLayout>